            <div class="mt-12 grid grid-cols-3 gap-8 xl:mt-0 xl:col-span-2">
                <div class="col-span-2">
                    <div>
                        <h3 class="text-sm font-semibold text-white tracking-wider uppercase">
                            Seguros
                        </h3>
                        <ul role="list" class="mt-4 md:grid md:grid-cols-3 md:gap-x-3 md:gap-y-4 space-y-4 md:space-y-0">
                            {% for seguro in collections.segurosSortedForFooter %}

                                {% if page.url == seguro.url %}
                                    {% assign currentPageAria = 'aria-current="page"' %}
                                    {% assign currentPageClass = 'bg-blue-100' %}
                                {% else %}
                                    {% assign currentPageAria = '' %}
                                    {% assign currentPageClass = '' %}
                                {% endif %}

                                <li>
                                    <a href="{{ seguro.url }}" class="text-base text-gray-200 hover:text-gray-400">
                                        {{ seguro.data.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="md:grid md:grid-cols-2 md:gap-8 col-span-1">
                    <div>
                        <h3 class="text-sm font-semibold text-white tracking-wider uppercase">
                            Páginas
                        </h3>
                        <ul role="list" class="mt-4 space-y-4">
                            {% for navPage in collections.pagesSorted %}

                                {% if page.url == navPage.url %}
                                    {% assign currentPageAria = 'aria-current="page"' %}
                                    {% assign currentPageClass = 'bg-blue-100' %}
                                {% else %}
                                    {% assign currentPageAria = '' %}
                                    {% assign currentPageClass = '' %}
                                {% endif %}

                                <li>
                                    <a
                                        href="{{ navPage.url }}"
                                        class="{{ currentPageClass }} text-base text-gray-200 hover:text-gray-400"
                                        {{ currentPageAria }}
                                    >
                                        {{ navPage.data.title }}
                                    </a>
                                </li>
                            {% endfor %}
                            <li>
                                <a href="https://portal.sppseguros.com.mx/" class="text-base text-gray-200 hover:text-gray-400">
                                    Seguro de Calidad
                                </a>
                            </li>
                            <li>
                                <a href="https://portal.sppseguros.com.mx/informacion-financiera-detalle" class="text-base text-gray-200 hover:text-gray-400">
                                    Información Financiera
                                </a>
                            </li>
                            <li>
                                <a href="https://www.dibujando.org.mx/" class="text-base text-gray-200 hover:text-gray-400">
                                    Fundación Dibujando un Mañana
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-12 border-t border-gray-200 pt-8">
            <div class="flex justify-between items-center mb-8">
                <a href="https://sitio.amis.com.mx/" target="_blank">
                    <span class="sr-only">AMIS</span>
                    {{ icons.sppIcons.amis }}
                </a>

                <a href="https://buro.gob.mx/" target="_blank">
                    <span class="sr-only">BURO de Entidades Financieras</span>
                    <img src="/static/img/buro.svg" alt="Buro de Entidades Financieras" style="position: relative;width: 40px;height: 40px;">
                </a>

                <a href="https://gob.mx/cnsf" target="_blank">
                    <span class="sr-only">Comisión Nacional de Seguros y Finanzas</span>
                    {{ icons.sppIcons.cnsf }}
                </a>

                <a href="https://gob.mx/condusef" target="_blank">
                    <span class="sr-only">CONDUSEF</span>
                    {{ icons.sppIcons.condusef }}
                </a>

                <a href="/static/docs/NSR_74507_12049.pdf" target="_blank">
                    <span class="sr-only">AMBest</span>
                    <img src="/static/img/am-bestw.svg" alt="AMBest" style="position: relative;width: 160px;height: 160px;">
                </a>

            </div>
            <p class="text-base text-white xl:text-center">
                ® 2023 Derechos Reservados SPP Institución de Seguros S.A. de C.V.
            </p>
        </div>
    </div>
</footer>
